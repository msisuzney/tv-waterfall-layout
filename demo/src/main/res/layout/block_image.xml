<?xml version="1.0" encoding="utf-8"?>
<com.msisuzney.tv.waterfallayout.view.FocusLineFeedFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:edgeDistance="60dp"
    app:focusLineFeed="true">

    <FrameLayout
        android:id="@+id/image_dock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </FrameLayout>
</com.msisuzney.tv.waterfallayout.view.FocusLineFeedFrameLayout>